# ====================================
# AI Provider Configuration
# ====================================

# Choose your AI provider: openai | gemini | claude
EXPO_PUBLIC_AI_PROVIDER=openai

# OpenAI (ChatGPT)
# Get your key at: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
# Get your key at: https://makersuite.google.com/app/apikey
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude
# Get your key at: https://console.anthropic.com/
EXPO_PUBLIC_CLAUDE_API_KEY=your_claude_api_key_here

# ====================================
# LiveKit Voice Agent Configuration
# ====================================
# Get your keys at: https://cloud.livekit.io/

LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# LiveKit Room (for testing)
EXPO_PUBLIC_LIVEKIT_ROOM_NAME=test-room

# ElevenLabs Voice Configuration
# Get your key at: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ====================================
# Payment Configuration
# ====================================

# Stripe Configuration
# Get your keys at: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# RevenueCat Configuration
# Get your keys at: https://app.revenuecat.com/api_keys
# iOS API Key
EXPO_PUBLIC_REVENUECAT_IOS_KEY=your_revenuecat_ios_key_here
# Android API Key
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=your_revenuecat_android_key_here

# RevenueCat Entitlement ID
EXPO_PUBLIC_REVENUECAT_ENTITLEMENT_ID=pro_features

# ====================================
# WorkOS Authentication Configuration
# ====================================
# Get your keys at: https://dashboard.workos.com/

WORKOS_API_KEY=your_workos_api_key_here
WORKOS_CLIENT_ID=your_workos_client_id_here
WORKOS_REDIRECT_URI=your_redirect_uri_here
WORKOS_SECRET_KEY=your_workos_secret_key_here

# WorkOS Webhook
WORKOS_WEBHOOK_SECRET=your_workos_webhook_secret_here

# ====================================
# Convex Backend Configuration
# ====================================
# Get your deployment URL from Convex dashboard

CONVEX_DEPLOYMENT=your_convex_deployment_url_here

# ====================================
# App Configuration
# ====================================

# App Environment: development | staging | production
APP_ENV=development

# App URL Scheme (for deep linking)
EXPO_PUBLIC_APP_SCHEME=alias-executive-agent
